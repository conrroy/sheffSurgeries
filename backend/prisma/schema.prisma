generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id           Int       @id @default(autoincrement())
  crated_at    DateTime? @default(now())
  updated_at   DateTime? @updatedAt
  app_date     DateTime?
  app_time     DateTime?
  app_duration Int?
  room_number  Int?
}

model Doctor {
  id            Int       @id @default(autoincrement())
  crated_at     DateTime? @default(now())
  updated_at    DateTime? @updatedAt
  full_name     String?
  qualification String?
  position      String?
  doctor_email  String?
  password      String?
  doctor_office String?
  doctor_phone  String?
  bio           String?
}

model Nurse {
  id             Int       @id @default(autoincrement())
  crated_at      DateTime? @default(now())
  updated_at     DateTime? @updatedAt
  nurse_name     String?
  qualifications String?
  nurse_email    String?
  nurse_office   String?
  nurse_phone    String?
}

model Patient {
  id         Int       @id @default(autoincrement())
  crated_at  DateTime? @default(now())
  updated_at DateTime? @updatedAt
  username   String    @unique
  name       String?
  address    String?
  residence  String?
  dob        DateTime?
  phone      String?
  email      String?
  password   String
}

model Prescription {
  id              Int       @id @default(autoincrement())
  crated_at       DateTime? @default(now())
  updated_at      DateTime? @updatedAt
  pharmacy_name   String?
  prescrip_number String?
  medicine        String?
  total_cost      Decimal?  @db.Decimal(10, 2)
  date_issued     DateTime?
  paying          String?
}

model Receptionist {
  id             Int       @id @default(autoincrement())
  crated_at      DateTime? @default(now())
  updated_at     DateTime? @updatedAt
  recep_name     String?
  recep_email    String?
  recep_username String?
  recep_password String?
  recep_phone    String?
}

model Surgery {
  id                 Int       @id @default(autoincrement())
  crated_at          DateTime? @default(now())
  updated_at         DateTime? @updatedAt
  name               String?
  address            String?
  postcode           String?
  telephone          String?
  number_of_patients Int?
  description        String?
  opening_time       DateTime?
}
